@{
    ViewData["Title"] = "Home Page";
}

@model List<string>

<div class="container">
    <div class="row">
        <form class="form-inline" asp-controller="Home" asp-action="GetData" method="get">
            <label for="priceMin" class="sm-2">Price min</label>
            <input type="number" class="form-control sm-2" id="priceMin" name="priceMin" value="400000" />
            <label for="priceMax" class="sm-2">Price max</label>
            <input type="number" class="form-control sm-2" id="priceMax" name="priceMax" value="950000" />
            <input type="submit" value="Search" class="btn btn-primary" />
        </form>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="col-xs-8">LINK</th>
                <th scope="col" class="col-xs-2">Blacklist</th>
                <th scope="col" class="col-xs-2">Whitelist</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var url in Model)
            {
                <tr>
                    <td><a href="@url" target="_blank">@url</a></td>
                    <td><button type="button" class="btn btn-danger btn-wide" onclick="addToBlackList('@url');">remove</button></td>
                    <td><button type="button" class="btn btn-success btn-wide" onclick="addToWhiteList('@url');">like</button></td>
                </tr>
            }
        </tbody>
    </table>
</div>